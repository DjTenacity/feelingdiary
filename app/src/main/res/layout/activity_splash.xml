<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_12"
        android:id="@+id/motion_layout_with_splash"
        tools:ignore="HardcodedText"
        app:layoutDescription="@xml/scene_splash_text"
        android:layout_height="match_parent">
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:id="@+id/guide"
            android:orientation="horizontal"
            android:layout_height="wrap_content"/>

    <TextView
            android:text="F"
            android:layout_width="25dp"
            android:textColor="#FF2D2D"
            android:layout_height="50dp"
            android:id="@+id/f"
            android:fontFamily="sans-serif-condensed"
            android:textSize="36sp"
    />

    <TextView
            android:fontFamily="sans-serif-condensed"
            android:text="E"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:id="@+id/e1"
            android:textColor="#0072E3"
            android:textSize="36sp"
    />

    <TextView
            android:fontFamily="sans-serif-condensed"
            android:text="E"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:id="@+id/e2"
            android:textColor="#0072E3"
            android:textSize="36sp"
    />

    <TextView
            android:fontFamily="sans-serif-condensed"
            android:text="L"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:id="@+id/l"
            android:textColor="#FFA042"
            android:textSize="36sp"
    />
    <TextView
            android:fontFamily="sans-serif-condensed"
            android:text="I"
            android:layout_width="15dp"
            android:layout_height="50dp"
            android:id="@+id/i1"
            android:textColor="#0F9D73"
            android:textSize="36sp"
    />
    <TextView
            android:fontFamily="sans-serif-condensed"
            android:text="N"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:id="@+id/n"
            android:textColor="#66F672"
            android:textSize="36sp"
    />
    <TextView
            android:fontFamily="sans-serif-condensed"
            android:text="G"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:id="@+id/g"
            android:layout_marginRight="@dimen/dp_12"
            android:textColor="#0FA042"
            android:textSize="36sp"
    />


    <TextView
            android:fontFamily="sans-serif-condensed"
            android:text="D"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:id="@+id/d"
            android:layout_marginLeft="@dimen/dp_12"
            android:textColor="#FFA042"
            android:textSize="36sp"
    />
    <TextView
            android:fontFamily="sans-serif-condensed"
            android:text="I"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:id="@+id/i2"
            android:textColor="#0072E3"
            android:textSize="36sp"
    />

    <TextView
            android:fontFamily="sans-serif-condensed"
            android:text="A"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:id="@+id/a"
            android:textColor="#FF2D2D"
            android:textSize="36sp"
    />
    <TextView
            android:fontFamily="sans-serif-condensed"
            android:text="R"
            android:textColor="#548C00"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:id="@+id/r"
            android:textSize="36sp"
    />
    <TextView
            android:fontFamily="sans-serif-condensed"
            android:text="Y"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:id="@+id/y"
            android:textColor="#F86042"
            android:textSize="36sp"
    />
</androidx.constraintlayout.motion.widget.MotionLayout>